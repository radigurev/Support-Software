@page "/Company/{token}"

<EditForm EditContext="editContext" OnSubmit="Submit">
    <ul>
        @foreach(var msg in errorMessages)
{
                <li class="validation-message">@msg</li>
}
    </ul>
<div class="d-flex justify-content-center flex-nowrap">
    <div class="row">
        <div class="col-6 mt-2">
            <label>Име:</label>
            <InputText @bind-Value="company.name" class="form-control" />
        </div>
        <div class="col-6 mt-2">
            <label>Адрес:</label>
            <InputText @bind-Value="company.address" class="form-control" />
        </div>
        <div class="col-6 mt-2">
            <label>ЕИК:</label>
            <InputText @bind-Value="company.EIK" class="form-control" />
        </div>
        <div class="col-6 mt-2">
            <label>Мениджър(Име):</label>
            <InputText @bind-Value="company.ManagerName" class="form-control" />
        </div>
        <div class="col-lg-12 mt-2">
            <button class="btnp">Запази</button>
        </div>
    </div>
</div>
</EditForm>