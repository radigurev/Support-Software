@page "/MainPage"

<AuthorizeView>
    <Authorized>
        @if (!role.Equals("Validator"))
        {
            @if (role.Equals("User"))
            {
                <a href="/Tickets/New" class="btnp">Нов</a>
            }

            <div class="d-table w-100 section-text">
                <h1 class="d-table-cell section-text-text">TO DO</h1>
                <div class="d-table-cell tar">
                    <button onclick="@ChangeToDo" style="background:none;border: none;">
                        @if (ShowToDo)
                        {
                            <i class="fa-solid fa-eye fa"></i>

                        }
                        else
                        {
                            <i class="fa-solid fa-eye-slash fa"></i>
                        }
                    </button>
                </div>
            </div>

            @if (ShowToDo)
            {
                <div class="main">
                    @foreach (var ToDo in ToDoTickets)
                    {
                        <a href="/Tickets/@ToDo.Id" class="">
                            <div class="pt-2">
                                <div class="two">
                                    <div class="d-flex justify-content-end px-3 pt-1"><i class="mdi mdi-star-outline pr-1 star"></i><i class="mdi mdi-dots-horizontal dot"></i></div>
                                    <div class="px-3"><div class="round"><i class="fa-solid fa-play imgfix"></i></div></div>
                                    <div class="px-3 pt-3">
                                        <h3 class="name">@ToDo.Title</h3>
                                        <p class="quote2">@ToDo.Problem</p>
                                    </div>
                                    <div class="d-flex justify-content-start px-3 align-items-center">
                                        <i class="mdi mdi-view-comfy task"></i>
                                        <span class="quote2 pl-2">Task: @ToDo.Title</span>
                                    </div>
                                    <div class="d-flex justify-content-between  px-3 align-items-center pb-3">
                                        <div class="d-flex justify-content-start align-items-center">
                                            <i class="mdi mdi-calendar-clock date"></i>
                                            <span class="quote2 pl-2">Date: @ToDo.CreatedDate</span>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </a>
                    }
                </div>
            }

            <div class="d-table w-100 section-text">
                <h1 class="d-table-cell section-text-text">In Progress</h1>
                <div class="d-table-cell tar">
                    <button onclick="@ChangeInProgress" style="background:none;border: none;">
                        @if (ShowInProgress)
                        {
                            <i class="fa-solid fa-eye fa"></i>

                        }
                        else
                        {
                            <i class="fa-solid fa-eye-slash fa"></i>
                        }
                    </button>
                </div>
            </div>

            @if (ShowInProgress)
            {
                <div class="main">
                    @foreach (var progress in ProgressTickets)
                    {
                        <a href="/Tickets/@progress.Id" class="">
                            <div class="pt-2">
                                <div class="two">
                                    <div class="d-flex justify-content-end px-3 pt-1"><i class="mdi mdi-star-outline pr-1 star"></i><i class="mdi mdi-dots-horizontal dot"></i></div>
                                    <div class="px-3"><div class="round"><i class="fa-solid fa-play imgfix"></i></div></div>
                                    <div class="px-3 pt-3">
                                        <h3 class="name">@progress.Title</h3>
                                        <p class="quote2">@progress.Problem</p>
                                    </div>
                                    <div class="d-flex justify-content-start px-3 align-items-center">
                                        <i class="mdi mdi-view-comfy task"></i>
                                        <span class="quote2 pl-2">Task: @progress.Title</span>
                                    </div>
                                    <div class="d-flex justify-content-between  px-3 align-items-center pb-3">
                                        <div class="d-flex justify-content-start align-items-center">
                                            <i class="mdi mdi-calendar-clock date"></i>
                                            <span class="quote2 pl-2">Date: @progress.CreatedDate</span>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </a>
                    }
                </div>
            }

            <div class="d-table w-100 section-text">
                <h1 class="d-table-cell section-text-text">Awaiting answer</h1>
                <div class="d-table-cell tar">
                    <button onclick="@ChangeWaitingAnswer" style="background:none;border: none;">
                        @if (ShowWaitingAnswer)
                        {
                            <i class="fa-solid fa-eye fa"></i>

                        }
                        else
                        {
                            <i class="fa-solid fa-eye-slash fa"></i>
                        }
                    </button>
                </div>
            </div>

            @if (ShowWaitingAnswer)
            {
                <div class="main">
                    @foreach (var waiting in WaitingTickets)
                    {
                        <a href="/Tickets/@waiting.Id" class="">
                            <div class="pt-2">
                                <div class="two">
                                    <div class="d-flex justify-content-end px-3 pt-1"><i class="mdi mdi-star-outline pr-1 star"></i><i class="mdi mdi-dots-horizontal dot"></i></div>
                                    <div class="px-3"><div class="round"><i class="fa-solid fa-play imgfix"></i></div></div>
                                    <div class="px-3 pt-3">
                                        <h3 class="name">@waiting.Title</h3>
                                        <p class="quote2">@waiting.Problem</p>
                                    </div>
                                    <div class="d-flex justify-content-start px-3 align-items-center">
                                        <i class="mdi mdi-view-comfy task"></i>
                                        <span class="quote2 pl-2">Task: @waiting.Title</span>
                                    </div>
                                    <div class="d-flex justify-content-between  px-3 align-items-center pb-3">
                                        <div class="d-flex justify-content-start align-items-center">
                                            <i class="mdi mdi-calendar-clock date"></i>
                                            <span class="quote2 pl-2">Date: @waiting.CreatedDate</span>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </a>
                    }
                </div>
            }

            <div class="d-table w-100 section-text">
                <h1 class="d-table-cell section-text-text">Closed tickets</h1>
                <div class="d-table-cell tar">
                    <button onclick="@ChangeClosed" style="background:none;border: none;">
                        @if (ShowClosedStatus)
                        {
                            <i class="fa-solid fa-eye fa"></i>

                        }
                        else
                        {
                            <i class="fa-solid fa-eye-slash fa"></i>
                        }
                    </button>
                </div>
            </div>
            @if (ShowClosedStatus)
            {
                <div class="main">
                    @foreach (var closed in ClosedTickets)
                    {
                        <a href="/Tickets/@closed.Id" class="">
                            <div class="pt-2">
                                <div class="two">
                                    <div class="d-flex justify-content-end px-3 pt-1"><i class="mdi mdi-star-outline pr-1 star"></i><i class="mdi mdi-dots-horizontal dot"></i></div>
                                    <div class="px-3"><div class="round"><i class="fa-solid fa-play imgfix"></i></div></div>
                                    <div class="px-3 pt-3">
                                        <h3 class="name">@closed.Title</h3>
                                        <p class="quote2">@closed.Problem</p>
                                    </div>
                                    <div class="d-flex justify-content-start px-3 align-items-center">
                                        <i class="mdi mdi-view-comfy task"></i>
                                        <span class="quote2 pl-2">Task: @closed.Title</span>
                                    </div>
                                    <div class="d-flex justify-content-between  px-3 align-items-center pb-3">
                                        <div class="d-flex justify-content-start align-items-center">
                                            <i class="mdi mdi-calendar-clock date"></i>
                                            <span class="quote2 pl-2">Date: @closed.CreatedDate</span>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </a>
                    }
                </div>
            }
        }
        else
        {
            <div class="d-table w-100 section-text">
                <h1 class="d-table-cell section-text-text">В изчакване за проверка</h1>
                <div class="d-table-cell tar">
                    <button onclick="@ChangeToDo" style="background:none;border: none;">
                        @if (ShowToDo)
                        {
                            <i class="fa-solid fa-eye fa"></i>

                        }
                        else
                        {
                            <i class="fa-solid fa-eye-slash fa"></i>
                        }
                    </button>
                </div>
            </div>
            @if (ShowToDo)
            {
                <div class="main">
                    @foreach (var ToDo in ToDoTickets)
                    {
                        <a class="" href="/Tickets/@ToDo.Id">
                            <div class="pt-2">
                                <div class="two">
                                    <div class="d-flex justify-content-end px-3 pt-1"><i class="mdi mdi-star-outline pr-1 star"></i><i class="mdi mdi-dots-horizontal dot"></i></div>
                                    <div class="px-3"><div class="round"><i class="fa-solid fa-question imgfix"></i></div></div>
                                    <div class="px-3 pt-3">
                                        <h3 class="name">@ToDo.Title</h3>
                                        <p class="quote2">@ToDo.Problem</p>
                                    </div>
                                    <div class="d-flex justify-content-start px-3 align-items-center">
                                        <i class="mdi mdi-view-comfy task"></i>
                                        <span class="quote2 pl-2">Task: @ToDo.Title</span>
                                    </div>
                                    <div class="d-flex justify-content-between  px-3 align-items-center pb-3">
                                        <div class="d-flex justify-content-start align-items-center">
                                            <i class="mdi mdi-calendar-clock date"></i>
                                            <span class="quote2 pl-2">Date: @ToDo.CreatedDate</span>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </a>
                    }
                </div>
                }
            }
    </Authorized>
    <NotAuthorized>
        <UnAuthorizedUser />
    </NotAuthorized>

</AuthorizeView>

<style>
    a {
        text-decoration: none;
        color: none;
    }
</style>